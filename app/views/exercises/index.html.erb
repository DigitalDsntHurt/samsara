<p id="notice"><%= notice %></p>

<h1 class="page-title">Exercises</h1>
<%= render partial: 'exercises/new_form', locals: {exercise: Exercise.new} %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Total minutes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.date %></td>
        <td><%= exercise.description %></td>
        <td><%= exercise.total_minutes %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


