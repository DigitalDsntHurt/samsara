<h1 class="page-title">Review</h1>
<h2 class="page-title">Select Start & End Dates</h2>

<%= form_with url: review_range_form_path do |form| %>
  
  <div class="form-group">
  	<%= form.text_field :start_date, data: { behavior: "date-picker" }, placeholder: "start date", class: "form-control" %>
  </div>
  
  <div class="form-group">
  	<%= form.text_field :end_date, data: { behavior: "date-picker" }, placeholder: "end date", class: "form-control" %>
  </div>
  
  <div class="actions">
  	<%= form.submit "submit", class: "btn btn-info btn-md short-text-button" %>
  </div>

<% end  %>